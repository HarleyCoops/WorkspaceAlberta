{
  "name": "WorkspaceAlberta - Google Drive Setup",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  },
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python"
      ],
      "settings": {
        "chat.mcp.discovery.enabled": true,
        "workbench.startupEditor": "readme"
      }
    },
    "codespaces": {
      "openFiles": [
        "SETUP-GUIDE.md"
      ]
    }
  },
  
  "postCreateCommand": "bash .devcontainer/setup.sh",
  
  "secrets": {
    "recommended": [
      {
        "name": "GOOGLE_CLIENT_ID",
        "description": "Your Google Cloud OAuth Client ID (from console.cloud.google.com)"
      },
      {
        "name": "GOOGLE_CLIENT_SECRET", 
        "description": "Your Google Cloud OAuth Client Secret"
      }
    ]
  },
  
  "portsAttributes": {
    "3000": {
      "label": "OAuth Callback",
      "onAutoForward": "openBrowser"
    }
  },

  "forwardPorts": [3000]
}
