{
  "$schema": "https://code.visualstudio.com/schemas/mcp.json",
  "servers": {
    "canadabuys": {
      "command": "python",
      "args": ["${workspaceFolder}/mcp-servers/canadabuys/server.py"],
      "env": {}
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "${workspaceFolder}"],
      "env": {}
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${env:GITHUB_TOKEN}"
      }
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "env": {}
    }
  },
  "_comment": "WorkspaceAlberta MCP configuration for VS Code. Includes CanadaBuys federal contract intelligence."
}
